<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap');
body{
   font-family: 'Poppins', sans-serif;
}
*{
    margin: 0;
    padding:0;
}    
.createNewPasswordFormContainer{
    height:100vh;
    width:100%;
    background-color:rgb(190, 190, 182);
    display: flex;
    align-items: center;
    justify-content: center;
}
.createNewPasswordFormAndHeadingDiv{
    height:35vh;
    width:380px;
    background-color: #d7d7d7;
    border-radius:10px;
}
.createNewPasswordHeadingDiv{
    height:20%;
    width:100%;
    /* background-color:green; */
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30px;
}
.createNewPasswordFormDiv{
    height:80%;
    width:100%;
    /* background-color:greenyellow; */
    display: flex;
    align-items: center;
    justify-content: center;
}
.createNewPasswordForm{
   height:100%;
   width: 100%;
   /* background-color: blue; */
}

.createNewPassswordInputContainer{
  height:30%;
  width:100%;
  /* background-color:gray; */
  display: flex;
  align-items: center;
  justify-content: center;
}
.createNewPasswordInputAndIconDiv{
    height:95%;
    width:95%;
    /* background-color:pink; */
    background-color:white;
    display: flex;
    align-items:center;
    justify-content: center;
    border-radius: 10px;
}
.createNewPasswordInputDiv{
    height:100%;
    width:80%;
    /* background-color: chartreuse; */
}
.showPasswordIconDiv{
    height:100%;
    width:20%;
    background-color:white;
    background-image:url(images/show.png);
    background-repeat: no-repeat;
    background-position: center;
    background-size:50% 45%;
    cursor: pointer;
    border-radius:0px 10px 10px 0px;
}
.hidePasswordIcon{
     height:100%;
    width:20%;
    background-color:white;
    background-image:url(images/hide.png);
    background-repeat: no-repeat;
    background-position: center;
    background-size:50% 45%;
    cursor: pointer;
    border-radius:0px 10px 10px 0px;
}
.createNewPasswordInput{
    height:100%;
    width:100%;   
    border: none;
    font-size:24px;
    border-radius:10px 0px 0px 10px;
}
.createNewPasswordInput:focus{
    outline:none;
}
.createNewPasswordInputAndIconDiv:hover{
    border-style: solid;
    border-color:gold;
    box-shadow:1px 1px 5px gold;
}


.retypePassswordInputContainer{
  height:30%;
  width:100%;
  /* background-color:brown; */
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top:6px;
}
.retypePasswordInputAndIconDiv{
    height:95%;
    width:95%;
    /* background-color:pink; */
    background-color:white;
    display: flex;
    align-items:center;
    justify-content: center;
    border-radius:10px;
}
.retypePasswordInputDiv{
    height:100%;
    width:80%;
    /* background-color: chartreuse; */
}
.showRetypePasswordIconDiv{
    height:100%;
    width:20%;
    background-color:white;
    background-image:url(images/show.png);
    background-repeat: no-repeat;
    background-position: center;
    background-size:50% 45%;
    cursor: pointer;
    border-radius:0px 10px 10px 0px;
}
.hideRetypePasswordIcon{
    height:100%;
    width:20%;
    background-color:white;
    background-image:url(images/hide.png);
    background-repeat: no-repeat;
    background-position: center;
    background-size:50% 45%;
    cursor: pointer;
    border-radius:0px 10px 10px 0px;
}
.retypePasswordInput{
    height:100%;
    width:100%;
    border: none;
    font-size:24px;
    border-radius:10px 0px 0px 10px;
}
.retypePasswordInput:focus{
    outline:none;
}
.retypePasswordInputAndIconDiv:hover{
    border-style: solid;
    border-color:gold;
    box-shadow:1px 1px 5px gold;
}



.signInButtonContainer{
  height:40%;
  width:100%;
  /* background-color:darkgoldenrod; */
  display: flex;
  align-items: center;
  justify-content: center;
}
.signInButtonDiv{
  height:95%;
  width:95%;
  /* background-color: darkmagenta; */
  display: flex;
  align-items: center;
  justify-content: center;
}
.signInButton{
    height:55px;
    width:170px;
    font-size: 21px;
    color: white;
    background-color:#506a50;
    border: none;
    border-radius:50px;
    cursor: pointer;
}
@media(max-width:387px){
    .createNewPasswordFormAndHeadingDiv{
    height:40vh;
    width:280px;
    }
    .createNewPasswordHeadingDiv{
    font-size: 25px;
    }
    .showPasswordIconDiv{
    background-size:75% 45%;
    }
    .showRetypePasswordIconDiv{
    background-size:75% 45%;
    }
}
@media(max-width:287px){
    .createNewPasswordFormAndHeadingDiv{
    height:35vh;
    width:240px;
    }
    .createNewPasswordHeadingDiv{
    font-size: 20px;
    }
    .showPasswordIconDiv{
    background-size:65% 35%;
    }
    .showRetypePasswordIconDiv{
    background-size:65% 35%;
    }
    .createNewPasswordInput{
    font-size:21px;
    }
    .retypePasswordInput{
    font-size:21px;
    }
}
@media(max-width:246px){
    .createNewPasswordFormAndHeadingDiv{
    height:27vh;
    width:200px;
    }
    .createNewPasswordHeadingDiv{
    font-size: 17px;
    }
    .showPasswordIconDiv{
    background-size:65% 40%;
    }
    .showRetypePasswordIconDiv{
    background-size:65% 40%;
    }
    .createNewPasswordInput{
    font-size:18px;
    }
    .retypePasswordInput{
    font-size:18px;
    }
    .signInButton{
       height:40px;
       width:100px;
       font-size: 14px;
    }
}
@media(max-width:246px){
    .createNewPasswordFormAndHeadingDiv{
    height:27vh;
    width:170px;
    }
    .createNewPasswordHeadingDiv{
    font-size: 15px;
    }
    .showPasswordIconDiv{
    background-size:75% 40%;
    }
    .showRetypePasswordIconDiv{
    background-size:75% 40%;
    }
    .createNewPasswordInput{
    font-size:14px;
    }
    .retypePasswordInput{
    font-size:14px;
    }
    .signInButton{
       height:40px;
       width:100px;
       font-size: 14px;
    }
}
</style>    
</head>
<body>
    <div class="createNewPasswordFormContainer">
        <div class="createNewPasswordFormAndHeadingDiv">
                <div class="createNewPasswordHeadingDiv">Create New Password</div>
                <div class="createNewPasswordFormDiv">
                    <form class="createNewPasswordForm" method="POST" action="/create_new_password">
                        <div class="createNewPassswordInputContainer">
                            <div class="createNewPasswordInputAndIconDiv">
                                <div class="createNewPasswordInputDiv"><input type="password" name="password" class="createNewPasswordInput" placeholder="new password" id="passwordInput"></div>
                                <div class="showPasswordIconDiv" id="showPasswordIcon"></div>
                            </div>
                        </div>
                        <div class="retypePassswordInputContainer">
                            <div class="retypePasswordInputAndIconDiv">
                                <div class="retypePasswordInputDiv"><input type="password" name="confirmpassword" class="retypePasswordInput" placeholder="retype password" id="confirmPasswordInput"></div>
                                <div class="showRetypePasswordIconDiv" id="showRetypePasswordIcon"></div>
                            </div>
                        </div>
                        <div class="signInButtonContainer">
                            <div class="signInButtonDiv"><input type="submit" value="Sign In" class="signInButton"></div>
                        </div>
                    </form>
                </div>
        </div>
    </div>
</body>
<script>
   let passwordInput=document.getElementById("passwordInput")
   let showPasswordIcon=document.getElementById("showPasswordIcon");
    showPasswordIcon.addEventListener("click",function(){
        if(Array.from(showPasswordIcon.classList).length==1){
         showPasswordIcon.classList.add("hidePasswordIcon")
         passwordInput.type="text";
        }
        else{
         showPasswordIcon.classList.remove("hidePasswordIcon")
         passwordInput.type="password";
        }
    })
   let showRetypePasswordIcon=document.getElementById("showRetypePasswordIcon");
   let confirmPasswordInput=document.getElementById("confirmPasswordInput")
    showRetypePasswordIcon.addEventListener("click",function(){
        if(Array.from(showRetypePasswordIcon.classList).length==1){
         showRetypePasswordIcon.classList.add("hideRetypePasswordIcon")
         confirmPasswordInput.type="text"
        }
        else{
         showRetypePasswordIcon.classList.remove("hideRetypePasswordIcon")
         confirmPasswordInput.type="password"
        }
    })
</script>
</html>